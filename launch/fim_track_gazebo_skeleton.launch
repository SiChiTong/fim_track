<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  
  <param name="fim_track_gazebo/robot_description" command="$(find xacro)/xacro --inorder $(find fim_track)/models/turtlebot3_$(arg model).urdf.xacro" />
  
  <param name="fim_track_gazebo/target_description" command="$(find xacro)/xacro --inorder $(find fim_track)/models/motion_lamp.urdf.xacro" />


  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/empty.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>  
</launch>
